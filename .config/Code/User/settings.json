{
  "workbench.colorTheme": "Daybreak",
  "editor.fontFamily": "'Iosevka SS08', 'Ubuntu Mono'",
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 89,
  "files.autoSave": "afterDelay",
  "workbench.iconTheme": "simple-icons",
  "window.zoomLevel": 0,
  "editor.fontSize": 20,
  "editor.fontLigatures": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "vsicons.dontShowNewVersionMessage": true,
  "git.confirmSync": false,
  "[javascript]": {
    // "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[javascriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[typescripot]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "explorer.confirmDragAndDrop": false,
  "git.enableSmartCommit": true,
  "explorer.confirmDelete": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "clockify.apiKey": "Xy1QMVXM5EtuLC6b",
  "rainbow_csv.autodetect_separators": ["\t", ",", ";", "|", "^"],
  "rainbow_csv.csv_lint_detect_trailing_spaces": true,
  "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",
  "python.linting.pycodestyleArgs": ["--ignoreW503"],
  "python.linting.pylamaArgs": ["--ignore=E402", "--ignore=E501"],
  "python.linting.flake8Args": ["--ignore=W503, E501"],
  "python.linting.pydocstyleArgs": ["--ignore=D100", "--ignore=D2"],
  "python.formatting.autopep8Args": ["--max-line-length=100"],
  "workbench.editor.labelFormat": "short",
  "python.pythonPath": "/usr/bin/python3.8",
  "python.formatting.provider": "black",
  "diffEditor.ignoreTrimWhitespace": true,
  "files.insertFinalNewline": true,

  "material-icon-theme.folders.associations": {
    "infra": "app",
    "entities": "class",
    "schemas": "class",
    "typeorm": "database",
    "repositories": "mappings",
    "http": "container",
    "migrations": "tools",
    "modules": "components",
    "implementations": "core",
    "dtos": "typescript",
    "fakes": "mock",
    "websockets": "pipe",
    "protos": "pipe",
    "grpc": "pipe"
  },

  "material-icon-theme.files.associations": {
    "ormconfig.json": "database",
    "tsconfig.json": "tune",
    "*.proto": "3d"
  },
  "files.maxMemoryForLargeFilesMB": 8000,
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter.notebook.ipynb",
      "filenamePattern": "*.ipynb"
    }
  ]
}